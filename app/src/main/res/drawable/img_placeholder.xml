<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The rounded rectangle shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?colorSurfaceVariant" />
            <corners android:radius="30dp" />
            <size android:height="200dp" android:width="400dp"/>
        </shape>
    </item>

    <!-- The icon image in the center of the rectangle -->
    <item android:gravity="center">
       <inset android:drawable="@drawable/outline_image_84" android:inset="6dp"/>
    </item>
</layer-list>
